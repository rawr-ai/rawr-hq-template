{
  "name": "rawr-hq-template",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.7",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/cli/*",
    "plugins/agents/*",
    "plugins/web/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:server": "turbo run dev --filter=@rawr/server",
    "dev:web": "turbo run dev --filter=@rawr/web",
    "dev:workflows": "bun run --cwd apps/server dev:inngest",
    "dev:up": "bash ./scripts/dev/up.sh",
    "dev:inngest": "bun run dev:workflows",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "pretest:vitest": "turbo run build",
    "test:vitest": "vitest run --config vitest.fast.config.ts",
    "test:heavy:cli": "vitest run --config vitest.heavy.cli.config.ts",
    "test:heavy:visual": "bun run --cwd apps/web test:visual",
    "test:heavy": "bun run test:heavy:cli && bun run test:heavy:visual",
    "test:all": "bun run test:vitest && bun run test:heavy",
    "test": "bun run test:vitest",
    "rawr": "bun run --cwd apps/cli rawr"
  },
  "overrides": {
    "npm": "11.9.0",
    "tar": "7.5.7"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitest/ui": "^4.0.18",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
